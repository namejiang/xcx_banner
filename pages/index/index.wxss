/* pages/shouchang/shouchang.wxss */
page{
  height: 100%;
}
.nav{
  overflow: hidden;
  padding: 10rpx;
  margin-bottom: 40rpx;
}
.nav text{
  width: 33.33%;
  float: left;
  color: #999;
  text-align: center;
  display: block;
  font-size: 24rpx;
}
.nav text.active{
  position: relative;
  top: -10rpx;
  font-size: 34rpx;
  color: #333;
}
.box {
  height: 80%;
  z-index: 0;
  margin: 50rpx 0;
  margin-top: 200rpx;
}
.box .club {
  height: 60%;
  width: 55%;
  position: relative;
  display: inline-block;
}
.club image {
  height: 100%;
  width: 100%;
}
.club text {
  display: block;
  width: 100%;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
}
