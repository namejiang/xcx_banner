  z-index: 10;
} */
.box .club:nth-child(1) {
  transform: scale(1,1) translateX(-85%);
  opacity: 0.5;
  z-index: 100;
}
.box .club:nth-child(2) {
  transform: scale(1.4,1.4)  translateX(-40%);
  z-index: 1000;
}
.box .club:nth-child(3) {
  transform: scale(1,1) translateX(-30%);
  opacity: 0.5;
  z-index: 100;
}
